<h1><%= @user.username %></h1>
<p><%= @user.email %></p>

<% if logged_in? && @user == current_user %>
  <p><%= link_to 'Edit', edit_user_path(@user) %> | <%= link_to 'Delete', user_path(@user), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></p>
<% end %>

<h2>User's articles</h2>
<% @user.articles.each do |article| %>
  <%= render 'articles/article', article: article %>
<% end %>

